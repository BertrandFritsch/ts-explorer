{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Get dependency graph",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/get-dependency-graph.ts",
      // "preLaunchTask": "tsc: build - tsconfig.json",
      // "outFiles": [
      //   "${workspaceFolder}/dist/**/*.js"
      // ],
      "runtimeArgs": [ "--experimental-specifier-resolution=node" ],
      "args": [ "../pelico_front/app/styles/pelicool/tokens/typography.ts" ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Clean unused dependencies",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/clean-unused-dependencies.ts",
      "runtimeArgs": [ "--experimental-specifier-resolution=node" ],
      "args": [ "../pelico_front/app/pages/supply/portfolio/index.tsx" ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Get external imports",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/get-external-imports.ts",
      "runtimeArgs": [ "--experimental-specifier-resolution=node" ],
      "args": [ "../pelico_front/app/pages/supply/portfolio/index.tsx" ]
    }
  ]
}
