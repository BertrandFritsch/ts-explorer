{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist/",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true
  },
  "files": [
    "./src/clean-unused-dependencies.ts",
    "./src/get-dependency-graph.ts"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}
