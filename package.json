{
  "scripts": {
    "changeset": "changeset",
    "ci:publish": "pnpm -C packages/ts build && pnpm publish -r",
    "tsc:check": "tsc --noEmit",
    "tsc:watch": "tsc -w"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      },
      "ignoreMissing": [
        "@babel/core",
        "webpack",
        "babel-loader",
        "@storybook/core-common",
        "@storybook/node-logger"
      ]
    },
    "overrides": {
      "jest-mock": "^28"
    },
    "packageExtensions": {
      "@storybook/addon-interactions": {
        "dependencies": {
          "core-js": "*"
        }
      },
      "@storybook/instrumenter": {
        "dependencies": {
          "core-js": "*"
        }
      },
      "@ts-explorer/sb": {
        "dependencies": {
          "global": "*"
        }
      }
    }
  }
}
